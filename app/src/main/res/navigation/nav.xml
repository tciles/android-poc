<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="fr.tciles.sportzone.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_cyclingFragment"
            app:destination="@id/cyclingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_runningFragment"
            app:destination="@id/runningFragment" />
    </fragment>
    <fragment
        android:id="@+id/cyclingFragment"
        android:name="fr.tciles.sportzone.ui.CyclingFragment"
        android:label="fragment_cycling"
        tools:layout="@layout/fragment_cycling" />
    <fragment
        android:id="@+id/runningFragment"
        android:name="fr.tciles.sportzone.ui.RunningFragment"
        android:label="fragment_running"
        tools:layout="@layout/fragment_running" />
</navigation>